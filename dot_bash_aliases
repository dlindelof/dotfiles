# enable color support of ls and also add handy aliases
if [ "$TERM" != "dumb" ]; then
    #eval "`dircolors -b`"
    alias ls='ls -G'
    alias dir='ls -G --format=vertical'
    alias vdir='ls -G --format=long'
fi

alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

alias s='cd ..'
alias b='cd -'
alias c='cd'
alias m='make'

alias g='git'
alias pu='pushd'
alias po='popd'

alias gp='gnuplot'

alias sai='sudo apt-get install'

alias cm='chezmoi'

